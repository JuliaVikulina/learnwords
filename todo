postgres=# \q

psql -U learnwords -d learnwords_db

schema.sql

data.sql

#1
SELECT id, word, translation, pronunciation
    FROM words
    WHERE username = 'daniilbubnov'
    AND repeat_after > '1994-11-28'
    ORDER BY repeat_after DESC;


